<style>
    .section-{{ section.id }}-padding {
        padding-top: {{ section.settings.padding_top }}px;
        padding-bottom: {{ section.settings.padding_bottom }}px;
        background:{{ section.settings.bg_color }};
      }
      .section-{{ section.id }}-padding .diagonal-stripes {
        display: block !important;
        width: 240px;
        height: 50px;
        background: repeating-linear-gradient(-50deg,  {{ section.settings.strp_color }},  {{ section.settings.strp_color }} 15px, transparent 10px, transparent 25px);
        margin:auto;
      }
      @media screen and (max-width:768px){
        .section-{{ section.id }}-padding .diagonal-stripes {
            width: 240px;
            height: 40px;
            background: repeating-linear-gradient(-50deg, {{ section.settings.strp_color }}, {{ section.settings.strp_color }} 13px, transparent 12px, transparent 22px);
        }   
      }
</style>
<section class="section-{{ section.id }}-padding">
    <div class="page-width">
    <div class="diagonal-stripes"></div>
   </div>
</section>
{% schema %}
{
  "name": "Divider",
  "settings": [
      {
          "type": "range",
          "id": "padding_top",
          "min": 0,
          "max": 100,
          "step": 1,
          "unit": "px",
          "label": "t:sections.all.padding.padding_top",
          "default": 36
        },
        {
          "type": "range",
          "id": "padding_bottom",
          "min": 0,
          "max": 100,
          "step": 1,
          "unit": "px",
          "label": "t:sections.all.padding.padding_bottom",
          "default": 36
        },
        {
          "type" : "color",
          "id" : "bg_color",
          "label" : "Background Color",
          "default" : "transparent"
          },
          {
            "type": "color",
            "id" : "strp_color",
            "label" : "Stripe Color",
            "default" : "#a8d30d"
          }
  ],
  "presets":[
    {
      "name": "Divider"
    }
  ]
}
{% endschema %}

