<div class="video-banner section-{{ section.id }}" id="section-{{ section.id }}">
    <div class="image-video-banner-container">
        {% if section.settings.video != blank %}
        <video  autoplay loop muted playsinline preload="none" poster="{{ section.settings.video | img_url: '1500x' }}" class="video-banner-desktop">
            <source id="mp4" src="{{section.settings.video.sources[1].url}}" data-src="{{section.settings.video}}" type="video/mp4">
            <track src="captions_en.vtt" kind="captions" srclang="en" label="English">
            <p>Your user agent does not support the HTML5 Video element.</p>
          </video>
          <button class="desktop-pause-btn" aria-label="pause"><svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 35 48">
            <g data-name="Group 3482" transform="translate(6625 19047.896)" opacity="0.275">
              <rect  data-name="Rectangle 2591" width="13" height="48" transform="translate(-6625 -19047.896)" fill="#fff"/>
              <rect  data-name="Rectangle 2592" width="13" height="48" transform="translate(-6603 -19047.896)" fill="#fff"/>
            </g>
          </svg> </button>
          {% if section.settings.video_mb != blank %}
            <video  autoplay loop muted playsinline preload="none" poster="{{ section.settings.video_mb | img_url: '1500x' }}" class="video-banner-mobile">
              <source id="mp4" src="{{section.settings.video_mb.sources[1].url}}" data-src="{{section.settings.video_mb}}" type="video/mp4">
              <track src="captions_en.vtt" kind="captions" srclang="en" label="English">
              <p>Your user agent does not support the HTML5 Video element.</p>
            </video>
            <button class="mobile-pause-btn" aria-label="pause"><svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 27 37">
              <g data-name="Group 3482" transform="translate(6625 19047.896)" opacity="0.275">
                <rect  data-name="Rectangle 2591" width="13" height="48" transform="translate(-6625 -19047.896)" fill="#fff"/>
                <rect  data-name="Rectangle 2592" width="13" height="48" transform="translate(-6603 -19047.896)" fill="#fff"/>
              </g>
            </svg> </button>
          {% endif %}
          {% elsif section.settings.image != blank %}
           {% render 'image', image:section.settings.image, class:"image-banner-dekstop", index: section.index %}
           {% if section.settings.image_mb != blank  %}
            {% render 'image', image:section.settings.image_mb, class:"image-banner-mobile", index: section.index, dev:true %}
           {% endif %}
        {% endif %}
          {% if section.blocks.size != 0 or section.settings.video != blank or section.settings.image != blank %}
          <div class="page-width">
            <div class="video-banner-content">
            {% for block in section.blocks %}
                {%  case block.type %}
                    {% when 'subheading' %}
                {% if block.settings.subheading != blank %}
                <div class="video-banner-subheading">
                  <p>{{ block.settings.subheading }}</p>
                </div>
            {% endif %}
        {% when 'heading' %}
            {% if block.settings.heading != blank %}
              <style>
                #section-{{ section.id }} .heading-{{ block.id }} h1{
                font-size:{{ block.settings.font_size | divided_by:10.0 }}rem;
                line-height:{{ block.settings.font_size | divided_by:10.0 | plus:0.4 }}rem;
                }
                @media screen and (max-width:768px){
                  #section-{{ section.id }} .heading-{{ block.id }} h1{
                    font-size:{{ block.settings.font_size_mb | divided_by:10.0 }}rem;
                    line-height:{{ block.settings.font_size_mb | divided_by:10.0 | minus:0.6 }}rem;
                    }
                }
                </style>
                <div class="video-banner-heading heading-{{ block.id }}">
                    <h1>{{ block.settings.heading }}</h1>
                </div>
            {% endif %}
            {% when 'info' %}
            {% if block.settings.info != blank %}
                <div class="video-banner-Content">
                    <p>{{ block.settings.info }}</p>
                </div>
                {% endif %}
                {% when 'button' %}
                  <style>
                  #section-{{ section.id }} .video-first-btn:hover {background-color:{{block.settings.bghover_first}} !important;}
                  #section-{{ section.id }} .video-second-btn:hover {background-color:{{block.settings.bghover_second}} !important;}
                  </style>
                {% if block.settings.button_label != blank or block.settings.button_label_1 != blank %}
                <div class="video-banner-btn">
                    {% if block.settings.button_label != blank %}
                    <a href="{{ block.settings.button_link }}" class="video-first-btn" style="background:{{ block.settings.bg_first }};color:{{ block.settings.txt_first }}">{{ block.settings.button_label }}</a>
                    {% endif %}
                    {% if block.settings.button_label_1 != blank %}
                    <a href="{{ block.settings.button_link_1 }}" class="video-second-btn" style="background:{{ block.settings.bg_second }};color:{{ block.settings.txt_second }}">{{ block.settings.button_label_1 }}</a>
                    {% endif %}
                </div>
            {% endif %}
        {% endcase %}
            {% endfor %}
        </div>
        </div>
    {% endif %}
    </div>
</div>
{% endif %}

