
{% if section.settings.video != blank or section.settings.image != blank %}

<style>
    .section-{{ section.id }}{
        padding-top:{{ section.settings.padding_top }}px;
        padding-bottom:{{ section.settings.padding_bottom }}px;
        }
    .image-video-banner-container {
    position:relative;
    }
    .section-{{ section.id }} .image-video-banner-container video, .section-{{ section.id }} .image-video-banner-container img{
    width:100%;
    object-fit:cover;
    object-position:center;
    height:{{  section.settings.dp_height }}px;
    display:block;
    }
    .section-{{ section.id }} .video-banner-content{
        position: absolute;
        top: {{section.settings.position_top}}%;
        left: {{  section.settings.position_left}}%;
        transform:translate(-{{  section.settings.position_left}}%, -{{section.settings.position_top}}%);
        width: 100%;
        max-width: 600px;
        {% if section.settings.text_align == 'center' %}
        text-align: center;
        {% elsif section.settings.text_align == 'right'  %}
        text-align: right;
        {% endif %}
        padding:30px;
        z-index:1;
    }
    .section-{{ section.id }} .video-banner-subheading p{
    margin:0;
    font-size:10px;
    text-transform:uppercase;
    color:{{ section.settings.text_color }};
    }
    .section-{{ section.id }} .video-banner-heading h1{
    margin:0;
    color:{{ section.settings.text_color }};
    }
    .section-{{ section.id }} .video-banner-Content p{
        margin:0;
        font-size:1.6rem;
        line-height:2.1rem;
        color:{{ section.settings.text_color }};
    }
    .section-{{ section.id }} .image-video-banner-container:after {
        top: 0;
        left: 0;
        content: '';
        width: 100%;
        height: 100%;
        background: {{section.settings.overlay_color}};
        position: absolute;
        opacity: {{ section.settings.overlay_opacity | divided_by:10.0}};
        z-index: 0;
    }
    .section-{{ section.id }}  .video-banner-btn{
    padding-top:30px;
    display: flex;
    align-items: center;
    {% if section.settings.text_align == 'center' %}
      justify-content: center;
      {% elsif section.settings.text_align == 'right'  %}
      justify-content: right;
   {% endif %}
    gap: 15px;
    width: 100%;
    }
    .video-banner-btn a{
    text-decoration:none;
    padding:14px 10px;
    font-size:1.4rem;
    line-height:1.9rem;
    width:50%;
    display:inline-block;
    border-radius:8px;
    text-align:center;
    font-weight:normal;
    }
    .section-{{ section.id }} .image-video-banner-container video.video-banner-mobile, .section-{{ section.id }} .image-video-banner-container img.image-banner-mobile{
    display:none;
    }
    .desktop-pause-btn, .mobile-pause-btn{
    position:absolute;
    bottom:20px;
    right:20px;
    transform:translate(-20px, -20px);
    background:transparent;
    border:none;
    z-index:2;
    cursor:pointer;
    }
    .desktop-pause-btn svg, .mobile-pause-btn svg{
    width:35px;
    height:48px;
    transition:opacity 0.3s ease;
    }
    .section-{{ section.id }} .mobile-pause-btn{
    display:none;
    }
    .desktop-pause-btn svg.video-play-svg{
    width:45px;
    height:45px;
    opacity:0.275;
    fill:#fff;
    }
    .desktop-pause-btn:hover svg g, .mobile-pause-btn:hover svg, .desktop-pause-btn:hover svg{
    fill:#fff;
    opacity:1;
    }
    .video-banner-subheading p{
      padding-bottom:10px;
     }


  
