
{{ 'product-guide.css' | asset_url | stylesheet_tag }}
{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top }}px;
    padding-bottom: {{ section.settings.padding_bottom }}px;
  }
.section-{{ section.id }}-padding .product-guide-content:after{
    opacity:{{ section.settings.overlay | divided_by:10.0 }};
}
{%- endstyle -%}
<div class="page-width">
  <div class="steps-count-bar">
  <div class="step-bar-intro step-count active">
    <div class="circle-step">
    </div>
    <p>Intro</p>
  </div>
  <div class="step-bar-1 step-count">
    <div class="circle-step">
    </div>
    <p>Step 1</p>
  </div>
  <div class="step-bar-2 step-count">
    <div class="circle-step">
    </div>
    <p>Step 2</p>
  </div>
  <div class="step-bar-result step-count" disabled>
    <p>Result</p>
  </div>
  </div>
  </div>
<div class="product-guide-step section-{{ section.id }}-padding guide-intro-start guide-step-section active">
    <div class="page-width">
        <div class="product-guide-intro">
        <div class="product-guide-left">
            {% if section.settings.heading != blank %}
            <div class="product-guide-intor-heading">
                <h2>{{ section.settings.heading }}</h2>
            </div>
        {% endif %}
        {% if section.settings.des!= blank %}
            <div class="product-guide-intro_des">
              <p>{{ section.settings.des }}</p>
            </div>
        {% endif %}
            <div class="product-guide-intro-btn">
             <button class="product-guide-intro-step">{{ section.settings.btn_label }}</button>
            </div>
        </div>
        <div class="product-guid-right">
            {% if section.settings.image != blank %}
            {% render 'image', image:section.settings.image %}
            {% else %}
            {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
            {% endif %}
        </div>
        </div>
        </div>
    </div>

{% schema %}
{
  "name": "Product Guide Intro",
  "tag": "section",
  "class": "product-intro",
  "limit":1,
  "settings": [
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 36
    },
    {
      "type" : "text",
      "label" : "title",
      "id" : "heading"    
    },
    {
        "type" : "textarea",
        "label" : "Info",
        "id" : "des"    
    },
    {
        "type" : "text",
        "label" : "Button Label",
        "id" : "btn_label",
        "default": "Get Started"
    },
    {
        "type" : "image_picker",
        "label" : "Image",
        "id" : "image"
    }
  ],
  "presets": [
    {
      "name": "Product Guide Intro"
    }
  ]
}
{% endschema %}
