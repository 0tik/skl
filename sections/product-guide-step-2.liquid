

{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top }}px;
    padding-bottom: {{ section.settings.padding_bottom }}px;
    background:{{ section.settings.bg_color }};
  }
/* .section-{{ section.id }}-padding .product-guide-content:after{
    opacity:{{ section.settings.overlay | divided_by:10.0 }};
} */
{% if section.settings.columns_desktop == '1' %}
  .section-{{ section.id }}-padding .product-guide-content {
   height: 300px;
   width:100% !important;
 }
 {% endif %}
@media screen and (max-width:768px){
    .section-{{ section.id }}-padding {
    padding-top: 0px;
    padding-bottom: {{ section.settings.padding_bottom | divided_by:2 }}px;
  }
  {% if section.settings.columns_desktop == '1' %}
  .section-{{ section.id }}-padding .product-guide-content {
   height: 180px;
 }
 {% endif %}
  }
    {%- endstyle -%}
{% if section.blocks.size >= 1 %}
<div class="product-guide-step section-{{ section.id }}-padding">
    <div class="page-width">
        {% render 'product-guide', section:section, blocks:section.blocks, class:"guide-step-two", column:section.settings.columns_desktop %}
        </div>
    </div>
{% endif %}
{% schema %}
{
  "name": "Product Guide Step 2",
  "tag": "section",
  "class": "product-step-2 guide-step-section",
  "limit":1,
  "settings": [
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 36
    },
    {
    "type" : "color",
    "id" : "bg_color",
    "label" : "Background Color",
    "default" : "transparent"
    },
    {
        "type" : "text",
        "label" : "subtitle",
        "id" : "subheading"    
    },
    {
      "type" : "text",
      "label" : "title",
      "id" : "heading"    
    },
    {
      "type": "select",
      "id": "columns_desktop",
      "options": [
        {
          "value": "1",
          "label": "One"
        },
        {
          "value": "2",
          "label": "Two"
        }
      ],
      "default": "2",
      "label": "t:sections.main-collection-product-grid.settings.columns_desktop.label"
    },
    {
      "type": "range",
      "id": "font_size",
      "min": 20,
      "max": 30,
      "step": 1,
      "unit": "px",
      "label": "Card heading size desktop",
      "default": 30
  },
  {
    "type": "range",
    "id": "font_size_mb",
    "min": 16,
    "max": 22,
    "step": 1,
    "unit": "px",
    "label": "Card heading size Mobile",
    "default": 20
}
  ],
  "blocks":[
    {
        "type" : "image",
        "name" : "Image with text",
        "settings":[
            {
            "type" : "image_picker",
            "id" : "step_img",
            "label" : "Image"
            },
            {
                "type" : "text",
                "id" : "title",
                "label" : "Title"
            },
            {
            "type" : "text",
            "id" : "connect_step",
            "label" : "Connect to step 1",
            "info" : "write the title of the first step that this block needs to be referenced with. If there are multiple values separate it with '|' "
            }
        ]
    }
],
  "presets": [
    {
      "name": "Product Guide Step 2"
    }
  ]
}
{% endschema %}
