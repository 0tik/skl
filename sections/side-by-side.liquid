<div class="{% if section.settings.fullwidth == false %}page-width__padding {% else %}full-width{% endif %}">
  <div class="two-columns-main two-columns-main__sidebyside">
    {% for block in section.blocks %}
      {% case block.type  %}
        {% when 'fullimage' %}
          <div class="three-columns-inner {{ block.type }} fi-{{block.id}}{% if forloop.index == 1 %} order-lg-first order-2{% endif %}{% if block.settings.copyoverlay %} banner__overlay{% endif %}" {{ block.shopify_attributes }}>
            {% if block.settings.image_link != blank %}
              <a href="{{ block.settings.image_link }}"></a>
            {% endif %}
            <div class="offsets">
              <div class="three-columns-thumb">
                <div class="media">
                  {%- render 'image',
                    image: block.settings.image
                  -%}
                </div>
                <div class="copy-main--container d-flex align-items-{{ block.settings.vertical }} justify-content-{{ block.settings.horizontal }}{% if block.settings.show_text_below %} d-none d-md-flex{% endif %}">
                  <div class="copy-main">
                    {% if block.settings.heading != blank %}
                      <div class="copy-title h2">
                        {{ block.settings.heading }}
                      </div>
                    {% endif %}
                    {% if block.settings.text != blank %}
                      <div class="copy-details">
                        {{ block.settings.text }}
                      </div>
                    {% endif %}
                    {% if block.settings.cta1_text != blank or block.settings.cta2_text != blank %}
                      <div class="copy-links">
                        {% if block.settings.cta1_text != blank and block.settings.cta1_link != blank  %}
                          <a class="button button--{{ block.settings.button_type_1 }}" href="{{ block.settings.cta1_link }}">{{ block.settings.cta1_text }}</a>
                        {% endif %}
                        {% if block.settings.cta2_text != blank and block.settings.cta2_link != blank %}
                          <a class="button button--{{ block.settings.button_type_2 }}" href="{{ block.settings.cta2_link }}">{{ block.settings.cta2_text }}</a>
                        {% endif %}
                      </div>
                    {% endif %}
                  </div>
                </div>
              </div>
              {% if block.settings.show_text_below %}
                <div class="copy-main">
                  {% if block.settings.heading != blank %}
                    <div class="copy-title h2">
                      {{ block.settings.heading }}
                    </div>
                  {% endif %}
                  {% if block.settings.text != blank %}
                    <div class="copy-details">
                      {{ block.settings.text }}
                    </div>
                  {% endif %}
                  {% if block.settings.cta1_text != blank or block.settings.cta2_text != blank %}
                    <div class="copy-links d-block d-md-none">
                      {% if block.settings.cta1_text != blank and block.settings.cta1_link != blank  %}
                        <a class="button button--{{ block.settings.button_type_1 }}" href="{{ block.settings.cta1_link }}">{{ block.settings.cta1_text }}</a>
                      {% endif %}
                      {% if block.settings.cta2_text != blank and block.settings.cta2_link != blank %}
                        <a class="button button--{{ block.settings.button_type_2 }}" href="{{ block.settings.cta2_link }}">{{ block.settings.cta2_text }}</a>
                      {% endif %}
                    </div>
                  {% endif %}
                </div>
              {% endif %}
            </div>
          </div>
        {% style %}

          .fi-{{block.id}} .offsets {
            padding-top:{{block.settings.padding-top}}%;
            padding-right:{{block.settings.padding-right}}%;
            padding-bottom:{{block.settings.padding-bottom}}%;
            padding-left:{{block.settings.padding-left}}%;
            height:100%;
          }

          @media screen and (max-width: 767px) {
             #shopify-section-{{section.id}} .two-columns-main .fi-{{block.id}} .three-columns-thumb {
              height: auto;
              padding: {{ block.settings.mbsize | divided_by: 2 }}% 0;
            }

            .fi-{{block.id}} .three-columns-thumb {
              {% if block.settings.image-mobile %}
                background-image:url({{ block.settings.image-mobile | img_url: '800x' }});
              {%else%}
                background-image:url({{ block.settings.image | img_url: '800x' }});
              {%endif%}
              background-position:{{block.settings.image1hang-mobile}};
            }
          }

          .fi-{{block.id}}.fullimage.banner__overlay .three-columns-thumb::before {
            opacity: 0.{{block.settings.overlay}};
          }


          .fi-{{block.id}} .copy-title {
            font-size: {{ block.settings.fontsize }}px;
            line-height: {{ block.settings.fontsize }}px;
          }

          .fi-{{block.id}} .three-columns-thumb .copy-title {
            color: {{block.settings.headcolor}};
          }

          @media screen and (max-width: 767px) {
            .fi-{{block.id}} .copy-title {
              font-size:{{block.settings.fontsize-mobile}}px;
            }
          }

          .fi-{{block.id}} .copy-details {
            font-size:{{block.settings.fontsize-copy}}px;
          }

          .fi-{{block.id}} .three-columns-thumb .copy-details {
            color:{{block.settings.textcolor}};
          }

          @media screen and (max-width: 767px) {
            .fi-{{block.id}} .copy-details {
              font-size:{{block.settings.fontsize-copy-mobile}}px;
            }
