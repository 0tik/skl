<style>
    .section-{{ section.id }}-padding {
        padding-top: {{ section.settings.padding_top }}px;
        padding-bottom: {{ section.settings.padding_bottom }}px;
      }
      .text-link-wrapper {
        display: flex;
        gap: 25px;
    }
    .text-link-content {
        width: 33.3333%;
        text-align: center;
    }
      .text-link-content a{
        width: 100%;
        display: flex;
        text-decoration: none;
        text-transform: capitalize;
        color: #fff;
        font-size: 36px;
        line-height: 41px;
        background: #000;
        padding: 15px;
        border-radius: 10px;
        font-weight:700;
        height:100%;
        justify-content:center;
        align-items:center;
    }
    @media screen and (max-width:1100px){
        .text-link-content a{
            font-size:24px;
            line-height:29px;
           }
    }
    @media screen and (max-width:768px){
        .text-link-wrapper {
        flex-wrap:wrap;
        gap:15px;
        }
        .text-link-content {
            width:100%;
        }
    }
</style>

<div class="text-link section-{{ section.id }}-padding">
<div class="page-width">
    <div class="text-link-wrapper">
        {% for block in section.blocks %}
            {% if block.settings.button_link != blank and block.settings.title != blank %}
        <div class="text-link-content">
            <a href="{{ block.settings.button_link }}">{{ block.settings.title }}</a>
        </div>
    {% endif %}
    {% endfor %}
    </div>
</div>
</div>


{% schema %}
  {
    "name": "Text With Link",
    "settings": [
        {
            "type": "range",
            "id": "padding_top",
            "min": 0,
            "max": 100,
            "step": 1,
            "unit": "px",
            "label": "t:sections.all.padding.padding_top",
            "default": 36
          },
          {
            "type": "range",
            "id": "padding_bottom",
            "min": 0,
            "max": 100,
            "step": 1,
            "unit": "px",
            "label": "t:sections.all.padding.padding_bottom",
            "default": 36
          }
    ],
    "blocks":[
        {
            "type" : "link",
            "name" : "Button",
            "limit" : 3,
            "settings":[
                {
                    "type": "text",
                    "id": "title",
                    "default": "Button label",
                    "label": "Button Label"
                  },
                  {
                    "type": "url",
                    "id": "button_link",
                    "label": "Button Link"
                  }
            ]
        }
    ],
    "presets":[
      {
        "name": "Text With Link"
      }
    ]
  }
{% endschema %}

