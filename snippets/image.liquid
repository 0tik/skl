{%- if image != blank -%}

  <img
    srcset="{%- if image.width >= 165 -%}{{ image | image_url: width: 165 }} 165w,{%- endif -%}
      {%- if image.width >= 360 -%}{{ image | image_url: width: 360 }} 360w,{%- endif -%}
      {%- if image.width >= 535 -%}{{ image | image_url: width: 535 }} 535w,{%- endif -%}
      {%- if image.width >= 750 -%}{{ image | image_url: width: 750 }} 750w,{%- endif -%}
      {%- if image.width >= 1070 -%}{{ image | image_url: width: 1070 }} 1070w,{%- endif -%}
      {%- if image.width >= 1500 -%}{{ image | image_url: width: 1500 }} 1500w,{%- endif -%}
      {{ image | image_url }} {{ image.width }}w"
   {% unless dev %} src="{{ image | image_url: width: 1500, format: 'pjpg' }}"{% else %} src="{{ image | image_url: width: 800, format: 'pjpg' }}"{% endunless %}
    sizes="(min-width: {{ settings.page_width }}px) 1500px, (min-width: 750px) calc((100vw - 130px) / 2), calc((100vw - 50px) / 2)"
    alt="{{ image.alt | escape }}"
    {%  unless index == 1 %}loading="lazy"{% endunless %}
    width="{{ image.width }}"
    height="{{ image.height }}"
    {% if class %}class="{{ class }}"{% endif %}
  >
{%- else -%}
  {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
{%- endif -%}
